# Example commands.yml file
# This file is auto-generated when you create command bundles using /bundle add
# You can also manually edit this file and reload with /bundle reload

commands:
  # Simple heal command
  heal:
    actions:
    - heal %player%
    - tell %player% You have been healed!
  
  # Starter kit (console commands with ! prefix)
  kit:
    actions:
    - !give %player% diamond_sword 1
    - !give %player% iron_pickaxe 1
    - !give %player% bread 32
    - !give %player% torch 64
    - tell %player% You received your starter kit!
  
  # Spawn teleport
  spawn:
    actions:
    - tp %player% 0 100 0
    - title %player% title {"text":"Welcome to Spawn!","color":"gold"}
    - playsound minecraft:entity.player.levelup master %player% ~ ~ ~ 1 1
  
  # Admin check command (console only)
  checkstats:
    actions:
    - !effect give %player% minecraft:glowing 5 0
    - !tellraw @a {"text":"Checking %player%...","color":"yellow"}
    - !minecraft:advancement grant %player% only minecraft:story/root
  
  # Multiple effects bundle
  boost:
    actions:
    - !effect give %player% minecraft:speed 60 1
    - !effect give %player% minecraft:jump_boost 60 1
    - !effect give %player% minecraft:night_vision 60 0
    - tell %player% You have been boosted for 60 seconds!
  
  # Clear inventory and give fresh start
  fresh:
    actions:
    - clear %player%
    - !give %player% stone_sword 1
    - !give %player% bow 1
    - !give %player% arrow 64
    - xp add %player% 10 levels
    - tell %player% Fresh start! Good luck!